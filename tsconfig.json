{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "CommonJS",
    "outDir": "dist",
    "removeComments": true,
    "target": "ES6",

    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {},

    "sourceMap": true,
    "sourceRoot": "/",

    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ]
}